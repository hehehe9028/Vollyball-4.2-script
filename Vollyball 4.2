-- Function to show "MADE BY CRAZY" popup
local function showMadeByCrazy()
    local popup = Instance.new("TextLabel")
    popup.Text = "MADE BY CRAZY"
    popup.Font = Enum.Font.GothamBlack
    popup.TextSize = 50
    popup.TextColor3 = Color3.new(1,1,1)
    popup.BackgroundColor3 = Color3.new(0,0,0)
    popup.Size = UDim2.new(1, 0, 1, 0)
    popup.Position = UDim2.new(0,0,0,0)
    popup.Parent = screenGui
    popup.TextScaled = true

    wait(3)
    popup:Destroy()
end

-- Lion Roar Sound
local sound = Instance.new("Sound")
sound.SoundId = lionRoarId
sound.Volume = 1
sound.Parent = frame

-- Key check function
local function checkKey(text)
    if text:lower() == "CRAZY4.2" then
        errorLabel.Text = ""
        sound:Play()
        showMadeByCrazy()
        wait(0.3)
        screenGui:Destroy()
        -- Load the main script
        loadstring(game:HttpGet("https://raw.githubusercontent.com/hokalaza/4.2/refs/heads/main/english"))()
    else
        errorLabel.Text = "Wrong key, try again!"
        -- Shake animation for frame
        local info = TweenInfo.new(0.05, Enum.EasingStyle.Linear, Enum.EasingDirection.Out, 5, true)
        local tween = TweenService:Create(frame, info, {Position = frame.Position + UDim2.new(0, 5, 0, 0)})
        tween:Play()
    end
end

-- Bind enter key to submit
inputBox.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        checkKey(inputBox.Text)
    end
end)
